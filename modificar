  <script>
    const imagem = document.getElementById("personagem");
    const genero = document.getElementById("genero");
    const raca = document.getElementById("raca");
    const classe = document.getElementById("classe");

    function atualizarSprite() {
      const urlBase = "https://raw.githubusercontent.com/sanderfrenken/Universal-LPC-Spritesheet-Character-Generator/master/spritesheets/";
      const nomeArquivo = `${genero.value}_${raca.value}_${classe.value}.png`;
      imagem.src = urlBase + nomeArquivo;
    }

    // Atualiza a imagem ao mudar qualquer sele√ß√£o
    genero.onchange = raca.onchange = classe.onchange = atualizarSprite;

    // Inicializa
    atualizarSprite();
  </script>
